@model FischPark.Models.PkmnBiomesViewModel

@{
    ViewBag.Title = "PKMN Biomes";
}

<style type="text/css"> table.table tr td {
        vertical-align: middle
    }
</style>

<h1>PKMN Biomes</h1>
<h4>A record of spawns on a single spawnpoint in Pokemon Go, as recorded when I happen to check the spawnpoint.</h4>


<h2>Top 3 Spawns by Weather</h2>
<div class="row">
    <div class="table-responsive col-md-4">
        <img src="https://raw.githubusercontent.com/apavlinovic/pokemon-go-imagery/42a8d6aaad6d95ef0753fe80b4ddd168dd05908e/images/weatherIcon_large_clearDay.png" width="60" height="60"><b> Clear</b>
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Species</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 3; i++)
                {
                <tr>
                    <td><img src="https://img.pokemondb.net/sprites/ruby-sapphire/normal/@(Model.clearList[i].Pokemon.ToLower()).png" width="40" height="40" /> @Model.clearList[i].Pokemon</td>
                    <td>@Model.clearList[i].Count</td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="table-responsive col-md-4">
        <img src="https://raw.githubusercontent.com/apavlinovic/pokemon-go-imagery/42a8d6aaad6d95ef0753fe80b4ddd168dd05908e/images/weatherIcon_large_partlyCloudyDay.png" width="60" height="60"><b> Partly Cloudy</b>
