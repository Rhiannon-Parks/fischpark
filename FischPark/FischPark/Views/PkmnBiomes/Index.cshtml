<br /><br /><br />
<h2>Full List</h2>
<div class="row body-content">
    <div class="table-responsive">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th class="col-md-2">Rank</th>
                    <th class="col-md-3">Species</th>
                    <th class="col-md-2">Count</th>
                    <th class="col-md-2">Percentage</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.fullList.Count; i++)
                {
                <tr>
                    <td>@(i+1)</td>
                    <td><img src="https://img.pokemondb.net/sprites/ruby-sapphire/normal/@(Model.fullList[i].Pokemon.ToLower()).png" width="40" height="40" /> @Model.fullList[i].Pokemon</td>
                    <td>@Model.fullList[i].Count</td>
                    <td>@(((double)Model.fullList[i].Count / Model.fullList.Sum(c => c.Count)).ToString("0.0%"))</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>