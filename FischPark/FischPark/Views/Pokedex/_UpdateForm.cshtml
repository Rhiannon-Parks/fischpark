@model FischPark.Models.PokedexModel



@using (Ajax.BeginForm("UpdateFinal", "Pokedex",
        new AjaxOptions
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "PokedexUpdaterMain",
            OnSuccess = "submitForm(); $('#Pokedex_ID').focus(); $('#Pokedex_ID').val('');"
        }))
{



<div class="form-horizontal">
    <div class="form-group" style="font-weight:bold;">
        <div class="control-label col-xs-2">@Html.DisplayFor(x => x.Name)</div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Male, htmlAttributes: new { @class = "control-label col-xs-2" })
        @Html.EditorFor(x => x.Male, new { htmlAttributes = new { @class = "form-control col-xs-3" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Female, htmlAttributes: new { @class = "control-label col-xs-2" })
        @Html.EditorFor(x => x.Female, new { htmlAttributes = new { @class = "form-control col-xs-3" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Shiny, htmlAttributes: new { @class = "control-label col-xs-2" })
        @Html.EditorFor(x => x.Shiny, new { htmlAttributes = new { @class = "form-control col-xs-3" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Lucky, htmlAttributes: new { @class = "control-label col-xs-2" })
        @Html.EditorFor(x => x.Lucky, new { htmlAttributes = new { @class = "form-control col-xs-3" } })
    </div>

    <div class="form-group">
        @Html.HiddenFor(x => x.Pokedex_ID)
        <div class="col-xs-2"></div>
        <input type="submit" value="Update" class="btn btn-primary col-xs-3" />
    </div>

</div>

}
